generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model University {
  id        Int       @id @default(autoincrement())
  name      String
  shortName String    @unique
  website   String?
  faculties Faculty[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("universities")
}

model Faculty {
  id           Int          @id @default(autoincrement())
  name         String
  shortName    String
  universityId Int
  university   University   @relation(fields: [universityId], references: [id])
  departments  Department[]
  courses      Course[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([universityId, shortName])
  @@map("faculties")
}

model Department {
  id        Int       @id @default(autoincrement())
  name      String
  code      String
  facultyId Int
  faculty   Faculty   @relation(fields: [facultyId], references: [id])
  courses   Course[]
  teachers  Teacher[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("departments")
}

model Course {
  id           Int         @id @default(autoincrement())
  code         String      @unique
  name         String
  credits      Int
  description  String?
  semester     String
  level        String
  facultyId    Int
  faculty      Faculty     @relation(fields: [facultyId], references: [id])
  departmentId Int?
  department   Department? @relation(fields: [departmentId], references: [id])
  lectures     Lecture[]
  tags         CourseTag[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("courses")
}

model Lecture {
  id         Int       @id @default(autoincrement())
  courseId   Int
  course     Course    @relation(fields: [courseId], references: [id])
  type       String
  dayOfWeek  Int
  startTime  String
  endTime    String
  roomId     Int?
  room       Room?     @relation(fields: [roomId], references: [id])
  teacherId  Int?
  teacher    Teacher?  @relation(fields: [teacherId], references: [id])
  capacity   Int?
  enrolled   Int?
  schedules  Schedule[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("lectures")
}

model Teacher {
  id           Int         @id @default(autoincrement())
  firstName    String
  lastName     String
  title        String?
  email        String?
  departmentId Int?
  department   Department? @relation(fields: [departmentId], references: [id])
  lectures     Lecture[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("teachers")
}

model Building {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  rooms     Room[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("buildings")
}

model Room {
  id         Int       @id @default(autoincrement())
  number     String
  buildingId Int
  building   Building  @relation(fields: [buildingId], references: [id])
  capacity   Int?
  lectures   Lecture[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([buildingId, number])
  @@map("rooms")
}

model Tag {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  slug      String      @unique
  courses   CourseTag[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("tags")
}

model CourseTag {
  courseId Int
  course   Course @relation(fields: [courseId], references: [id])
  tagId    Int
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([courseId, tagId])
  @@map("course_tags")
}


model UserPreferences {
  id                 Int     @id @default(autoincrement())
  userId             String     @unique
  user               User    @relation(fields: [userId], references: [id])
  emailNotifications Boolean @default(true)
  reminderMinutes    Int     @default(60)

  @@map("user_preferences")
}

model Schedule {
  id        Int       @id @default(autoincrement())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  name      String
  isActive  Boolean   @default(true)
  lectures  Lecture[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("schedules")
}

model ScrapingJob {
  id            Int       @id @default(autoincrement())
  university    String
  faculty       String?
  status        String
  startedAt     DateTime?
  completedAt   DateTime?
  error         String?
  coursesAdded  Int       @default(0)
  lecturesAdded Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("scraping_jobs")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // Pro credentials login
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  
  // Relace k tvým modelům
  preferences   UserPreferences?
  schedules     Schedule[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}